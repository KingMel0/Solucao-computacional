<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Transações • OrçaBem</title>
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body class="ob-body">
  <header class="ob-hero">
    <div class="ob-hero__inner">
      <div class="ob-brand">
        <div class="ob-logo"></div>
        <div>
          <p class="ob-kicker">OrçaBem</p>
          <h1 class="ob-title">Transações</h1>
        </div>
      </div>
      <%- include('partials/nav') %>
    </div>
  </header>

  <main class="ob-container">
    <section class="ob-card">
      <h2 class="ob-h2">Nova transação</h2>
      <%- include('partials/flash') %>
      <form action="/transacoes" method="post" class="ob-form two-cols">
        <label>Tipo</label>
        <select name="tipo" required>
          <option value="receita">Receita</option>
          <option value="despesa">Despesa</option>
        </select>

        <label>Categoria</label>
        <select name="CategoriaId" required>
          <% categorias.forEach(c => { %>
            <option value="<%= c.id %>"><%= c.nome %></option>
          <% }) %>
        </select>

        <label>Conta</label>
        <select name="ContaId" required>
          <% contas.forEach(c => { %>
            <option value="<%= c.id %>"><%= c.nome %> (R$ <%= Number(c.saldo).toFixed(2) %>)</option>
          <% }) %>
        </select>

        <label>Valor</label>
        <input type="number" step="0.01" name="valor" required />

        <label>Data</label>
        <input type="date" name="data" required />

        <label>Descrição</label>
        <input type="text" name="descricao" placeholder="Opcional" />

        <label>Status</label>
        <select name="status">
          <option value="confirmada">Confirmada</option>
          <option value="pendente">Pendente</option>
        </select>

        <div class="full">
          <button class="ob-button" type="submit">Salvar</button>
        </div>
      </form>
    </section>
  </main>
</body>
</html>
