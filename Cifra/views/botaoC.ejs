<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Categorias • OrçaBem</title>
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body class="ob-body">
  <header class="ob-hero">
    <div class="ob-hero__inner">
      <div class="ob-brand">
        <div class="ob-logo"></div>
        <div>
          <p class="ob-kicker">OrçaBem</p>
          <h1 class="ob-title">Categorias</h1>
        </div>
      </div>
      <%- include('partials/nav') %>
    </div>
  </header>

  <main class="ob-container">
    <section class="ob-card">
      <h2 class="ob-h2">Nova categoria</h2>
      <%- include('partials/flash') %>
      <form action="/categorias" method="post" class="ob-form two-cols">
        <label>Nome</label>
        <input type="text" name="nome" required />
        <label>Limite (opcional)</label>
        <input type="number" step="0.01" name="limite" />
        <label>Fixo</label>
        <input type="checkbox" name="fixo"/>
        <div class="full">
          <button class="ob-button" type="submit">Adicionar</button>
        </div>
      </form>
    </section>
  </main>
</body>
</html>
